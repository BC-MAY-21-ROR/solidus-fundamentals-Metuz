<% @body_id = 'forgot_password' %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div id="forgot-password" class="panel panel-default">
      <div class="panel-heading">
        <%= t('spree.forgot_password') %>
      </div>
      <div class="panel-body">
        <p><%= t('spree.instructions_to_reset_password') %></p>
        <%= form_for Spree::User.new, as: :spree_user, url: spree.reset_password_path do |f| %>
          <div class="form-group">
            <%= f.label :email, t('spree.email') %>
            <%= f.email_field :email, required: true, class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit t('spree.reset_password'), class: 'btn btn-success btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>