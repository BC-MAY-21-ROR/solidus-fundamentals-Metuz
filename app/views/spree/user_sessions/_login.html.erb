<% if flash[:alert] %>
  <div class="flash errors"><%= flash[:alert] %></div>
<% end %>

<% @body_id = 'login' %>
<div id="existing-customer">
  <div class="alert alert-info">
    <%= t('spree.login_as_existing') %>
  </div>
  <div data-hook="login">
    <%= render partial: 'spree/shared/login' %>
    <hr>
    <%= link_to t('spree.create_a_new_account'), spree.signup_path %> | <%= link_to t('spree.forgot_password'), spree.recover_password_path %>
  </div>
</div>
<div data-hook="login_extras"></div>